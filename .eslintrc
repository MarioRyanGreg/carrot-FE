{
    
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "describe"   : true,
        "beforeEach" : true,
        "afterEach"  : true,
        "it"         : true,
        "expect"     : true,
        "_"          : true,
        "spyOn"      : true
    },
    "rules": {
        "linebreak-style": 0,
        "global-require": 0,
        "eslint linebreak-style": [0, "error", "windows"],
        "indent": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    },
    "extends": "airbnb"
}
